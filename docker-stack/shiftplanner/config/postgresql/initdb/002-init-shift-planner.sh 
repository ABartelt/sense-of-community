#!/bin/bash
set -e

POSTGRES_USER=postgres
MUDDI_POSTGRES_USER=$(cat /run/secrets/muddi_postgres_user)
MUDDI_POSTGRES_PASSWORD=$(cat /run/secrets/muddi_postgres_password)
MUDDI_POSTGRES_DB=$(cat /run/secrets/muddi_postgres_db)

psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" <<-EOSQL
    create user ${MUDDI_POSTGRES_USER} with password '${MUDDI_POSTGRES_PASSWORD}';
    create database ${MUDDI_POSTGRES_DB} with owner muddi;
EOSQ